@model Garage2.Models.ViewModels.EditParkedVehicleViewModel

@{
    ViewData["Title"] = "Edit Vehicle";
}

<div class="mx-auto my-10 max-w-md">
    <h1 class="mb-6 text-center text-3xl font-bold">Edit Vehicle</h1>

    <h4 class="text-lg font-semibold">Update Vehicle Details</h4>
    <hr class="my-4 border-gray-300" />

    <form asp-action="Edit" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="mb-4 text-center text-red-500"></div>

        <input type="hidden" asp-for="Id" />

        <div class="flex flex-col gap-y-2">
            <label asp-for="VehicleTypesId" class="font-medium text-gray-700"></label>
            <select id="vehicleTypeSelect" asp-for="VehicleTypesId" class="w-full rounded-md border p-2" asp-items="Model.VehicleTypes"></select>
            <span asp-validation-for="VehicleTypesId" class="mb-1 text-sm text-red-500"></span>
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="RegistrationNumber" class="font-medium text-gray-700"></label>
            <input asp-for="RegistrationNumber" class="w-full rounded-md border p-2" />
            <span asp-validation-for="RegistrationNumber" class="mb-1 text-sm text-red-500"></span>
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="Color" class="font-medium text-gray-700"></label>
            <input asp-for="Color" class="w-full rounded-md border p-2" />
            <span asp-validation-for="Color" class="mb-1 text-sm text-red-500"></span>
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="Make" class="font-medium text-gray-700"></label>
            <input asp-for="Make" class="w-full rounded-md border p-2" />
            <span asp-validation-for="Make" class="mb-1 text-sm text-red-500"></span>
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="Model" class="font-medium text-gray-700"></label>
            <input asp-for="Model" class="w-full rounded-md border p-2" />
            <span asp-validation-for="Model" class="mb-1 text-sm text-red-500"></span>
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="NumberOfWheels" class="font-medium text-gray-700"></label>
            <input asp-for="NumberOfWheels" class="w-full rounded-md border p-2" />
            <span asp-validation-for="NumberOfWheels" class="mb-1 text-sm text-red-500"></span>
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="ArrivalTime" class="font-medium text-gray-700"></label>
            <input asp-for="ArrivalTime" class="w-full rounded-md border bg-gray-100 p-2" disabled /> <!-- disabled as ArrivalTime shouldn't be editable -->
            <span asp-validation-for="ArrivalTime" class="mb-1 text-sm text-red-500"></span>
        </div>

        <div class="flex flex-col gap-y-2">
            <label asp-for="ParkingSpotId" class="font-medium text-gray-700"></label>
            <select id="parkingSpotSelect" asp-for="ParkingSpotId" class="w-full rounded-md border p-2" asp-items="Model.ParkingSpots"></select>
            <span asp-validation-for="ParkingSpotId" class="mb-1 text-sm text-red-500"></span>
        </div>

        <div class="mt-6 flex justify-center space-x-4">
            <input type="submit" value="Save" class="cursor-pointer rounded bg-indigo-600 px-4 py-2 text-white hover:bg-indigo-700" />
            <a asp-action="Index" class="rounded bg-gray-700 px-4 py-2 text-white hover:bg-gray-600">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
